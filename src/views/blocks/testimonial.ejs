<div class="testimonial">
    <blockquote>
        <div>
            <% var blocks = testimonial.quote.split("\n"); %>
            <% var len = blocks.length %>
            <% blocks.forEach((block, i) => { %>
                <%= block %> 
                <% if(i !== len - 1) { %>
                    <br>
                    <br>
                <% } %>
            <% }) %>
        </div>
        <footer>
            <cite>
                <span><%= testimonial.name %>, <%= testimonial.position %></span>
                <span><%= testimonial.company %></span>
            </cite>
        </footer>
    </blockquote>
</div>